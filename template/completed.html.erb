<% 
  job_status ||= 'running'
%>

<% if job_status == "completed" %>
  <div class="alert alert-success">
    <h4>Job Completed Successfully!</h4>
    <p>Your protein prediction job has finished. You can find the results in:</p>
    <a href="/pun/sys/dashboard/files/fs<%= run_dir %>" class="btn btn-primary" target="_blank">
      <i class="fa fa-folder-open"></i> Browse Results
    </a>
  </div>
<% elsif job_status == "failed" %>
  <div class="alert alert-danger">
    <h4>Job Failed</h4>
    <p>The protein prediction job encountered an error. Please check the logs for details:</p>
    <a href="/pun/sys/dashboard/files/fs<%= run_dir %>/logs" class="btn btn-secondary" target="_blank">
      <i class="fa fa-file-text"></i> View Logs
    </a>
  </div>
<% else %>
  <div class="alert alert-info">
    <h4>Job In Progress</h4>
    <p>Your protein prediction job is currently running. Please check back later.</p>
    <% if defined?(run_dir) && run_dir %>
      <a href="/pun/sys/dashboard/files/fs<%= run_dir %>/logs" class="btn btn-info" target="_blank">
        <i class="fa fa-file-text"></i> View Current Logs
      </a>
    <% end %>
  </div>
<% end %>