<%-
  case session_type     
  when "ESMFold"
      slurm_args = ["--nodes", "1", "--ntasks-per-node", "1", "--cpus-per-task", "1", "--gpus", "1", "--partition", "sla-prio,burst"]
  else
      slurm_args = ["--account", "open", "--partition", "open"]
  end    
-%>
---
batch_connect:
  template: "basic"
script:
  native:
    <%- slurm_args.each do |arg| -%>
      - "<%= arg %>"
    <%- end -%>
  conn_params:
    - run_dir
    - session_type
    - working_directory
    - job_status
    - output_dir 